<data>
    <xpath expr="/form/notebook/page[@id='general']" position="after">
        <page name="analytic_required" string="Analytics Configuration">
            <group id="configured_accounts" colspan="2" col="1" yfill="1">
                <field name="analytic_required"
                    view_ids="analytic_account.account_view_list,analytic_account.account_view_form"/>
                <field name="analytic_forbidden"
                    view_ids="analytic_account.account_view_list,analytic_account.account_view_form"/>
                <field name="analytic_optional"
                    view_ids="analytic_account.account_view_list,analytic_account.account_view_form"/>
            </group>
            <field name="analytic_pending_accounts" colspan="2"
                    view_ids="analytic_account.account_view_list,analytic_account.account_view_form"/>
        </page>
    </xpath>
</data>
